<!-- Likes Index -->

<%= Like.all.count %> likes

<% unless current_user.posts_liked.include?(post) %>
<%= button_to "Like", status_likes_url(post), method: :post %>
<% else %>
<%= button_to "Unlike",
status_like_url(post, Like.find_by_liker_and_post(current_user, post)),
method: :delete %>
<% end %>
