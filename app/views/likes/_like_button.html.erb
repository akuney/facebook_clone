<form class='like-form' data-remote="true" action="<%= status_likes_url(post.id) %>" method="POST">
  <%= render 'helpers/auth_token' %>

  <input type="hidden" name="like[liker_id]"
  value="<%= current_user.id %>">

  <input type="hidden" name="like[post_id]"
  value="<%= post.id %>">

  <input type="hidden" name="like[post_type]"
  value="<%= post.class.to_s %>">

  <div class='like-button link submit-link'>
    <input type="submit" value="Like">
  </div>
</form>