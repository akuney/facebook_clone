
<div class='tag-more-people'>
  <div class='text heading'>Tag More People!</div>

  <% @photo.untagged_friends(current_user).each do |user| %>
    <div class='untagged-friend group'>
      <%= render 'helpers/just_name', :user => user %>

      <form action="<%= photo_taggings_url %>" method="POST">
        <%= render 'helpers/auth_token'%>

        <input type="hidden" name="photo_tagging[photo_id]"
        value="<%= @photo.id %>">

        <input type="hidden" name="photo_tagging[user_id]"
        value="<%= user.id %>">

        <div class='link submit-link'>
          <input type="submit" value="Tag">
        </div>
      </form>
    </div>
  <% end %>

</div>