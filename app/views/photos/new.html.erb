<form action="<%= photos_url %>" method="POST">
  <input
     name="authenticity_token"
     type="hidden"
     value="<%= form_authenticity_token %>">

  <input type="hidden" name="photo[uploader_id]" value="<%= current_user.id %>">

  <div class='text'>
    URL:
  </div>
  <div class='input'>
    <input name="photo[url]">
  </div>

  <div class='text'>
    Comment:
  </div>
  <div class='textarea'>
    <textarea name="photo_comment[text]"></textarea>
  </div>

  <%= render 'helpers/friends_checkbox', :name => 'photo[tagged_user_ids][]',
  :friends => current_user.all_friends %>

  <div class='submit'>
    <input type="submit" value="Submit Photo">
  </div>
</form>
