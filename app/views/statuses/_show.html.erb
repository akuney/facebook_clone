<!-- Status show -->

<%= render 'helpers/pic_and_name', :user => status.author %>
<%= status.text %>
<%= render 'likes/like', :post => status %>

<% if current_user == status.author %>
<ul class='links'>
  <li>
    <%= link_to "Edit Status", edit_status_url(status) %>
  </li>
  <li>
    <%= button_to "Remove Status", status_url(status), method: :delete %>
  </li>
</ul>
<% end %>