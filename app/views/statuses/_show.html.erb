<!-- Status show -->

<%= render 'helpers/pic_and_name', :user => status.author %>
<div class='text'>
<%= status.text %>
</div>
<%= render 'likes/like', :post => status %>

<% if current_user == status.author %>
<div class='links group'>
  <div class='link'>
    <%= link_to "Edit Status", edit_status_url(status) %>
  </div>
  <div class='link'>
    <%= link_to "Remove Status", status_url(status), method: :delete %>
  </div>
</div>
<% end %>