<!-- status index -->
<% if (current_user == @user) %>
<%= render "/helpers/you", :user => @user %>
<% else %>
<%= render "/helpers/friend", :user => @user %>
<% end %>

<% if (@user == current_user)%>
<%= button_to "Create new status", new_status_url, method: :get %>
<% else %>
<%= button_to "Create new comment", new_user_comment_url(@user), method: :get %>
<% end %>

<% @statuses.each do |status| %>
<%= render "show", :status => status,
:user => @user %>
<%= render "replies/all", :post => status %>
<% end %>

<% @comments.each do |comment| %>
<%= render "comments/show", :comment => comment,
:user => @user %>
<%= render "replies/all", :post => comment %>
<% end %>