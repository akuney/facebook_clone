<!-- status index -->



<%= render 'cases', :user => @user %>

<%= render 'create_status_or_comment', :user => @user %>

<div class='statuses'>
  <% @statuses.each do |status| %>
    <%= render "show", :status => status, :user => @user %>

    <%= render "replies/all", :post => status %>
  <% end %>
</div>

<div class='comments'>
  <% @comments.each do |comment| %>
      <%= render "comments/show", :comment => comment, :user => @user %>
      <%= render "replies/all", :post => comment %>
  <% end %>
</div>
