<% action = users_url %>
<% method = "post" %>
<% message = 'Sign Up' %>

<div class='sign-up'>

  <form action="<%= action %>" method="POST">
    <input name="_method" type="hidden" value="<%= method %>">
    <%= render 'helpers/auth_token'%>

    <div class='text-input email'>
      <div class='text'>Email</div>
      <input name="user[email]" id='user_email' type="text" value="">
    </div>

    <div class='text-input password'>
      <div class='text'>Password</div>
      <input name="user[password]" id='user_password' type="password" value="">
     </div>

    <div class='submit link submit-link'>
      <input type="submit" id='submit' value="<%= message %>">
    </div>

  </form>

  <div class="submit link submit-link demo-sign-in">
    <a data-remote='true'>Fill In</a>
  </div>

</div>
