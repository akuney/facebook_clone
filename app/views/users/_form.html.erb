<% action = users_url %>
<% method = "post" %>
<% message = 'Sign Up' %>



<form action="<%= action %>" method="post">
  <input
     name="_method"
     type="hidden"
     value="<%= method %>">

  <%= render 'helpers/auth_token'%>


    <div class='text'>Sign Up </div>

    <div class='text-input'>

    <div class='text'>
      Email
    </div>

      <input
         id="user_email"
         name="user[email]"
         type="text">
    </div>

  <div class='text-input'>
    <div class='text'>Password</div>

    <input
       id="user_password"
       name="user[password]"
       type="password">
   </div>

     <div class='submit link submit-link'>
  <input type="submit" value="<%= message %>">
    </div>

</form>
