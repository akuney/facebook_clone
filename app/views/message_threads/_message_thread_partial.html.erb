<!-- one message thread -->

<%= link_to message_thread.title, message_thread_messages_url(message_thread) %>

<% num_recipients = message_thread.num_recipients %>

<% if (message_thread.creator == current_user) %>
    You and <%= link_to "#{num_recipients} others" %>
<% elsif (num_recipients > 1) %>
    You,
    <%= link_to message_thread.creator.name, user_statuses_url(message_thread.creator)%>,
    and
    <%= link_to "#{num_recipients - 1} others" %>
<% else %>
  You and <%= link_to message_thread.creator.name,
  user_statuses_url(message_thread.creator) %>
<% end %>

<%= button_to "Delete", message_thread_url(message_thread), method: :delete %>
