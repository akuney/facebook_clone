<!-- Friends index page -->
<div class='friends-index'>
  <% if current_user == @user %>
    <%= render 'helpers/you', :user => current_user %>
  <% else %>
    <%= render 'helpers/friend', :user => @user %>
  <% end %>

  <div class='no-friends'>
    <% if @user.all_friends.count == 0 %>
      <div class='text heading'>No Friends Yet</div>
      <div class='link demo demo-friend'>
        <a data-remote="true" data-method="post" href="<%= demo_friends_url %>">Make Some Friends</a>
      </div>
    <% end %>
  </div>



  <div class='friends'>
    <% @user.all_friends.each do |friend| %>
      <%= render 'friend', :friend => friend, :user => @user %>
    <% end %>
  </div>
</div>